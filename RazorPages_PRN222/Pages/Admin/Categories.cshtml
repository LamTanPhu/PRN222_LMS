@page
@model RazorPages_PRN222.Pages.Admin.CategoriesModel
@{
    ViewData["Title"] = "Manage Categories";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <h1>Manage Categories</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Category ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.Name</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@category.CategoryId" class="btn btn-primary btn-sm">Edit</a>
                        <form asp-page-handler="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@category.CategoryId" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-page="./Create" class="btn btn-success">Add New Category</a>
</div>