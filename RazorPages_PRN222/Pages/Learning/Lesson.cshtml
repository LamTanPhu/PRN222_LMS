@page
@model RazorPages_PRN222.Pages.Learning.LessonModel
@{
    ViewData["Title"] = "Lesson - " + Model.Lesson?.Title;
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Learning">My Learning</a></li>
                    <li class="breadcrumb-item"><a href="/Learning/Course/@Model.Course?.CourseId">@Model.Course?.Title</a></li>
                    <li class="breadcrumb-item active">@Model.Lesson?.Title</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3><i class="fas fa-play-circle"></i> @Model.Lesson?.Title</h3>
                        @if (Model.Progress?.IsCompleted == true)
                        {
                            <span class="badge bg-success">Completed</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">In Progress</span>
                        }
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i> @TempData["Message"]
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                        </div>
                    }
                    @if (TempData["Warning"] != null)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["Warning"]
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i> @TempData["Success"]
                        </div>
                    }
                    
                    <p class="text-muted">@Model.Lesson?.Description</p>
                    
                    <!-- Debug Information -->
                    <div class="alert alert-info">
                        <strong>Debug Info:</strong><br>
                        Lesson ID: @Model.Lesson?.LessonId<br>
                        Course ID: @Model.Course?.CourseId<br>
                        Quizzes Found: @Model.Quizzes.Count<br>
                        @if (Model.Quizzes.Any())
                        {
                            <div class="mt-2">
                                <strong>Quiz Details:</strong><br>
                                @foreach (var quiz in Model.Quizzes)
                                {
                                    <div class="badge bg-secondary me-2 mb-1">
                                        @quiz.Title<br>
                                        <small>ID: @quiz.QuizId | Questions: @(quiz.QuizQuestions?.Count ?? 0)</small>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="text-warning">No quizzes found for this lesson</span>
                        }
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Lesson?.ContentUrl))
                    {
                        <div class="ratio ratio-16x9 mb-4">
                            <iframe src="@Model.Lesson.ContentUrl" 
                                    title="@Model.Lesson.Title" 
                                    frameborder="0" 
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                                    allowfullscreen></iframe>
                        </div>
                    }

                    <div class="lesson-content">
                        <p>This is the lesson content. In a real implementation, you would display the actual lesson content here.</p>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            @if (Model.PreviousLesson != null)
                            {
                                <a href="/Learning/Lesson/@Model.PreviousLesson.LessonId" class="btn btn-outline-secondary">
                                    <i class="fas fa-chevron-left"></i> Previous Lesson
                                </a>
                            }
                        </div>
                        <div>
                            @if (Model.Progress?.IsCompleted != true)
                            {
                                <form method="post" asp-page-handler="MarkComplete" class="d-inline">
                                    <input type="hidden" name="lessonId" value="@Model.Lesson?.LessonId" />
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-check"></i> Mark as Complete
                                    </button>
                                </form>
                            }
                        </div>
                        <div>
                            @if (Model.NextLesson != null)
                            {
                                <a href="/Learning/Lesson/@Model.NextLesson.LessonId" class="btn btn-primary">
                                    Next Lesson <i class="fas fa-chevron-right"></i>
                                </a>
                            }
                            else if (Model.Quizzes.Any())
                            {
                                <a href="/Learning/Quiz/@Model.Quizzes.First().QuizId" class="btn btn-primary">
                                    Take Quiz <i class="fas fa-question-circle"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-list"></i> Course Progress</h5>
                </div>
                <div class="card-body">
                    <div class="progress mb-3">
                        <div class="progress-bar" role="progressbar" 
                             style="width: @(Model.CourseProgress)%" 
                             aria-valuenow="@Model.CourseProgress" 
                             aria-valuemin="0" aria-valuemax="100">
                            @Model.CourseProgress%
                        </div>
                    </div>
                    
                    <small class="text-muted">
                        @Model.CompletedLessons of @Model.TotalLessons lessons completed
                    </small>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5><i class="fas fa-question-circle"></i> Lesson Quizzes</h5>
                </div>
                <div class="card-body">
                    @if (Model.Quizzes.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var quiz in Model.Quizzes)
                            {
                                var quizAttempt = Model.QuizAttempts.FirstOrDefault(a => a.QuizId == quiz.QuizId);
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="fw-bold">@quiz.Title</span>
                                        <br>
                                        <small class="text-muted">
                                            Questions: @(quiz.QuizQuestions?.Count ?? 0) | 
                                            @if (quizAttempt != null)
                                            {
                                                <span class="text-@(quizAttempt.IsPassed == true ? "success" : "danger")">
                                                    Score: @(quizAttempt.Score?.ToString("F1") ?? "0")%
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not attempted</span>
                                            }
                                        </small>
                                    </div>
                                    <div>
                                        @if (quiz.QuizQuestions?.Count > 0)
                                        {
                                            <a href="/Learning/Quiz/@quiz.QuizId" class="btn btn-sm @(quizAttempt?.IsPassed == true ? "btn-outline-success" : "btn-primary")">
                                                @(quizAttempt?.IsPassed == true ? "Retake" : "Take Quiz")
                                            </a>
                                        }
                                        else
                                        {
                                            <div>
                                                <span class="badge bg-warning me-2">No Questions</span>
                                                <!-- Test Button to Load Questions -->
                                                <form method="post" asp-page-handler="TestLoadQuizQuestions" class="d-inline">
                                                    <input type="hidden" name="quizId" value="@quiz.QuizId" />
                                                    <button type="submit" class="btn btn-info btn-sm">
                                                        <i class="fas fa-sync"></i> Load
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">No quizzes for this lesson</p>
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5><i class="fas fa-clock"></i> Time Spent</h5>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <h4 class="text-primary">@(Model.Progress?.TimeSpent ?? 0) min</h4>
                        <small class="text-muted">Total time spent on this lesson</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .lesson-content {
        line-height: 1.6;
        font-size: 16px;
    }
    
    .lesson-content h1, .lesson-content h2, .lesson-content h3 {
        margin-top: 1.5rem;
        margin-bottom: 1rem;
    }
    
    .lesson-content p {
        margin-bottom: 1rem;
    }
    
    .lesson-content ul, .lesson-content ol {
        margin-bottom: 1rem;
        padding-left: 2rem;
    }
</style>
