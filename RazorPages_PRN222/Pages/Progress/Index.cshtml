@page
@model RazorPages_PRN222.Pages.Progress.IndexModel
@{
    ViewData["Title"] = "My Learning Progress";
}

<div class="container mt-5">
    <h1>My Learning Progress</h1>

    @if (Model.CourseProgressList.Any())
    {
        @foreach (var item in Model.CourseProgressList)
        {
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">@item.CourseTitle</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Enrollment Date:</strong> @item.EnrollmentDate?.ToString("MM/dd/yyyy")</p>
                                    <p><strong>Status:</strong> 
                                        <span class="badge bg-@(item.Status == "Completed" ? "success" : "secondary")">
                                    @item.Status
                                        </span>
                                    </p>
                                    <p><strong>Payment Status:</strong> 
                                        <span class="badge bg-@(item.PaymentStatus == "Paid" ? "success" : "warning")">
                                    @item.PaymentStatus
                                        </span>
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Progress:</strong> @item.ProgressPercentage.ToString("F1")%</p>
                                    <p><strong>Lessons:</strong> @item.CompletedLessons / @item.TotalLessons</p>

                                    <div class="progress">
                                        <div class="progress-bar 
                                    @(item.ProgressPercentage >= 70 ? "bg-success" : 
                                      item.ProgressPercentage >= 30 ? "bg-warning" : "bg-danger")"
                                             role="progressbar" 
                                             style="width: @item.ProgressPercentage%" 
                                             aria-valuenow="@item.ProgressPercentage" aria-valuemin="0" aria-valuemax="100">
                                    @item.ProgressPercentage.ToString("F1")%
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-3">
                                <a asp-page="/Courses/Lessons" asp-route-id="@item.CourseId" class="btn btn-primary">
                                    Continue Learning
                                    </a>

                                <a asp-page="/Quiz/Index" asp-route-courseId="@item.CourseId" class="btn btn-info">
                                    Take Quiz
                                </a>
                        @if (item.ProgressPercentage >= 100)
                        {
                                        <a asp-page="/Certificate/Index" asp-route-courseId="@item.CourseId" class="btn btn-success">
                                            Get Certificate
                                        </a>
                        }
                            </div>
                        </div>
                    </div>
        }
    }
    else
    {
            <div class="alert alert-info">
                <p>You haven't enrolled in any courses yet. 
                    <a asp-page="/Courses/Index">Browse courses</a> to get started!
                </p>
            </div>
    }
</div>
