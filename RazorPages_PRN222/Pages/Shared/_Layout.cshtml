<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Learning Platform</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/register-input.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/course-details.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorPages_PRN222.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="fas fa-graduation-cap me-2"></i>
                    E-Learning Platform
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Courses/Index">
                                <i class="fas fa-book me-1"></i>All Courses
                            </a>
                        </li>                       
                        
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="learningDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-brain me-1"></i>Learning
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="learningDropdown">
                                    <li><a class="dropdown-item" asp-page="/Progress/Index">
                                        <i class="fas fa-chart-line me-2"></i>My Progress
                                    </a></li>
                                    <li><a class="dropdown-item" asp-page="/Wishlist/Index">
                                        <i class="fas fa-heart me-2"></i>My Wishlist
                                    </a></li>
                                    <li><a class="dropdown-item" asp-page="/CertificatePage/Index">
                                        <i class="fas fa-certificate me-2"></i>My Certificates
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-page="/Forum/Index">
                                        <i class="fas fa-comments me-2"></i>Course Forums
                                    </a></li>
                                    <li><a class="dropdown-item" asp-page="/Review/Index">
                                        <i class="fas fa-star me-2"></i>Course Reviews
                                    </a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i>
                                    @User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-page="/MyProfile/Index">
                                        <i class="fas fa-user me-2"></i>My Profile
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-page="/Logout">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Register">
                                    <i class="fas fa-user-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="main-content">
        <div class="container">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>
 

    <!-- Footer - Đặt SAU CTA section -->
    <footer class="footer">
        <div class="footer-content">
            <div class="row g-5">
                <!-- Cột 1: E-Learning Platform & Social Links -->
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="footer-column">
                        <div class="footer-brand">
                            <h6 class="footer-title">E-Learning Platform</h6>
                            <p class="text-muted mb-4">
                                Empowering learners worldwide with quality education and interactive learning experiences.
                            </p>
                        </div>
                        <div class="social-links">
                            <a href="#" class="social-link" title="Facebook">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="social-link" title="Twitter">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="social-link" title="LinkedIn">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                            <a href="#" class="social-link" title="Instagram">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Cột 2: Quick Links -->
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="footer-column">
                        <h6 class="footer-title">Quick Links</h6>
                        <ul class="footer-links">
                            <li>
                                <a href="/" class="footer-link">
                                    <i class="fas fa-home"></i>
                                    <span>Home</span>
                                </a>
                            </li>
                            <li>
                                <a href="/Courses" class="footer-link">
                                    <i class="fas fa-book"></i>
                                    <span>Courses</span>
                                </a>
                            </li>
                            <li>
                                <a href="/About" class="footer-link">
                                    <i class="fas fa-info-circle"></i>
                                    <span>About</span>
                                </a>
                            </li>
                            <li>
                                <a href="/Contact" class="footer-link">
                                    <i class="fas fa-envelope"></i>
                                    <span>Contact</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Cột 3: Support -->
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="footer-column">
                        <h6 class="footer-title">Support</h6>
                        <ul class="footer-links">
                            <li><a href="/Help" class="footer-link"><i class="fas fa-question-circle"></i><span>Help Center</span></a></li>
                            <li><a href="/Privacy" class="footer-link"><i class="fas fa-shield-alt"></i><span>Privacy Policy</span></a></li>
                            <li><a href="/Terms" class="footer-link"><i class="fas fa-file-contract"></i><span>Terms of Service</span></a></li>
                            <li><a href="/FAQ" class="footer-link"><i class="fas fa-comments"></i><span>FAQ</span></a></li>
                            <li><a href="/Support" class="footer-link"><i class="fas fa-headset"></i><span>Contact Support</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <hr class="footer-divider">

            <div class="row">
                <div class="col-lg-6 col-md-8 text-center">
                    <div class="footer-bottom">
                        <p class="copyright-text">© 2025 E-Learning Platform. All rights reserved.</p>
                    </div>
                </div>
                <div class="col-lg-6 col-md-4 text-center">
                    <div class="footer-bottom">
                        <p class="made-with-text">Made with <i class="fas fa-heart"></i> for learners worldwide</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>