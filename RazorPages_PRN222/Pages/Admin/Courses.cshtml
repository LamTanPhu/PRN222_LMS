@page
@model RazorPages_PRN222.Pages.Admin.CoursesModel
@{
    ViewData["Title"] = "Manage Courses";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h1>Manage Courses</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model.Courses)
            {
                <tr>
                    <td>@course.CourseId</td>
                    <td>@course.Title</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@course.CourseId" class="btn btn-primary btn-sm">Edit</a>
                        <form asp-page-handler="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@course.CourseId" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-page="/Courses/Create" class="btn btn-success">Add New Course</a>
</div>