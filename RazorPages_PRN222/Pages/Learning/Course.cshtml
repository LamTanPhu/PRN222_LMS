@page
@model RazorPages_PRN222.Pages.Learning.CourseModel
@{
    ViewData["Title"] = "Course - " + Model.Course?.Title;
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Learning">My Learning</a></li>
                    <li class="breadcrumb-item active">@Model.Course?.Title</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3><i class="fas fa-book"></i> @Model.Course?.Title</h3>
                </div>
                <div class="card-body">
                                         <p class="text-muted">@Model.Course?.Description</p>
                     
                     <!-- Quiz Overview Section -->
                     @if (Model.Quizzes.Any())
                     {
                         <div class="alert alert-warning border-0" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white;">
                             <div class="d-flex align-items-center">
                                 <div class="flex-grow-1">
                                     <h5 class="mb-1"><i class="fas fa-question-circle me-2"></i>Course Quizzes Available!</h5>
                                     <p class="mb-0">This course has @Model.Quizzes.Count quiz(zes) to test your knowledge. Take them after completing each lesson.</p>
                                 </div>
                                 <div class="ms-3">
                                     <a href="#course-quizzes" class="btn btn-light">
                                         <i class="fas fa-list me-2"></i>View All Quizzes
                                     </a>
                                 </div>
                             </div>
                         </div>
                     }
                     
                     <!-- Debug Information -->
                    <div class="alert alert-info">
                        <strong>Debug Info:</strong><br>
                        Course ID: @Model.Course?.CourseId<br>
                        Lessons Found: @Model.TotalLessons<br>
                        Quizzes Found: @Model.TotalQuizzes<br>
                        @if (Model.Lessons.Any())
                        {
                            <div class="mt-2">
                                <strong>Lessons:</strong><br>
                                @foreach (var lesson in Model.Lessons)
                                {
                                    <span class="badge bg-secondary me-2 mb-1">
                                        @lesson.Title (ID: @lesson.LessonId)
                                    </span>
                                }
                            </div>
                        }
                        @if (Model.Quizzes.Any())
                        {
                            <div class="mt-2">
                                <strong>Quizzes:</strong><br>
                                @foreach (var quiz in Model.Quizzes)
                                {
                                    <span class="badge bg-primary me-2 mb-1">
                                        @quiz.Title (Lesson: @quiz.LessonId)
                                    </span>
                                }
                            </div>
                        }
                    </div>

                    @if (Model.Lessons.Any())
                    {
                        <h5><i class="fas fa-list"></i> Course Lessons</h5>
                        <div class="list-group">
                            @foreach (var lesson in Model.Lessons)
                            {
                                var progress = Model.LessonProgress.FirstOrDefault(p => p.LessonId == lesson.LessonId);
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@lesson.Title</h6>
                                        <small class="text-muted">@lesson.Description</small>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        @if (progress?.IsCompleted == true)
                                        {
                                            <span class="badge bg-success me-2">Completed</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning me-2">In Progress</span>
                                        }
                                        <a href="/Learning/Lesson/@lesson.LessonId" class="btn btn-primary btn-sm">
                                            <i class="fas fa-play"></i> Continue
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> No lessons available for this course.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-chart-line"></i> Progress</h5>
                </div>
                <div class="card-body">
                    <div class="progress mb-3">
                        <div class="progress-bar" role="progressbar" 
                             style="width: @(Model.Enrollment?.ProgressPercentage ?? 0)%" 
                             aria-valuenow="@(Model.Enrollment?.ProgressPercentage ?? 0)" 
                             aria-valuemin="0" aria-valuemax="100">
                            @(Model.Enrollment?.ProgressPercentage?.ToString("F1") ?? "0")%
                        </div>
                    </div>
                    
                    <ul class="list-unstyled">
                        <li><strong>Lessons:</strong> @Model.CompletedLessons / @Model.TotalLessons</li>
                        <li><strong>Quizzes:</strong> @Model.PassedQuizzes / @Model.TotalQuizzes</li>
                        <li><strong>Enrolled:</strong> @Model.Enrollment?.EnrollmentDate?.ToString("MMM dd, yyyy")</li>
                    </ul>
                </div>
            </div>

            @if (Model.Quizzes.Any())
            {
                <div class="card mt-3" id="course-quizzes">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-question-circle me-2"></i>Course Quizzes</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var quiz in Model.Quizzes)
                            {
                                var quizAttempt = Model.QuizAttempts.FirstOrDefault(a => a.QuizId == quiz.QuizId);
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="fw-bold">@quiz.Title</span>
                                        <br>
                                        <small class="text-muted">
                                            @if (quizAttempt != null)
                                            {
                                                <span class="text-@(quizAttempt.IsPassed == true ? "success" : "danger")">
                                                    Score: @(quizAttempt.Score?.ToString("F1") ?? "0")%
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not attempted</span>
                                            }
                                        </small>
                                    </div>
                                    <div>
                                        @if (quizAttempt?.IsPassed == true)
                                        {
                                            <span class="badge bg-success">Passed</span>
                                        }
                                        else
                                        {
                                            <a href="/Quiz/@quiz.QuizId" class="btn btn-primary btn-sm">
                                                Take Quiz
                                            </a>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <div class="card mt-3">
                <div class="card-header">
                    <h5><i class="fas fa-clock"></i> Recent Activity</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentActivity.Any())
                    {
                        <ul class="list-unstyled">
                            @foreach (var activity in Model.RecentActivity.Take(3))
                            {
                                <li class="mb-2">
                                    <small class="text-muted">@activity.LastAccessedAt?.ToString("MMM dd")</small><br>
                                    <span class="@(activity.IsCompleted == true ? "text-success" : "text-muted")">
                                        @(activity.IsCompleted == true ? "Completed" : "Accessed") lesson
                                    </span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No recent activity</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
