@page "{categoryId?}"
@model RazorPages_PRN222.Pages.Courses.IndexModel
@{
    ViewData["Title"] = "Courses";
    var categoryItems = Model.Categories.Select(c => new SelectListItem { Value = c.CategoryId.ToString(), Text = c.Name }).ToList();
}

<!-- Page Header -->
<div class="courses-page-header">
    <div class="container">
        <h1>Available Courses</h1>
        <p class="subtitle">Discover amazing courses and start your learning journey today</p>
    </div>
</div>

<div class="container">
    <!-- Admin Add Course Button -->
    @if (User.IsInRole("Admin"))
    {
        <div class="admin-add-course">
            <a asp-page="/Courses/Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Add New Course
            </a>
        </div>
    }
    
    <!-- Category Filter -->
    <div class="category-filter">
        <form method="get">
            <select asp-items="categoryItems" asp-for="CategoryId" class="form-select" onchange="this.form.submit()">
                <option value="">All Categories</option>
            </select>
        </form>
    </div>
    
    <!-- Courses Grid -->
    <div class="row courses-grid">
        @foreach (var course in Model.Courses)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="course-card">
                    <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text">@(course.Description?.Length > 100 ? course.Description.Substring(0, 100) + "..." : course.Description)</p>
                        
                        <div class="course-meta">
                            <span class="category-badge">@(course.Category?.Name ?? "N/A")</span>
                            <span class="instructor-badge">@(course.Instructor?.FullName ?? "N/A")</span>
                        </div>
                        
                        <div class="course-actions">
                            <a asp-page="/Courses/Details" asp-route-id="@course.CourseId" class="btn btn-info">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            
                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                @if (course.Enrollments.Where(e => int.Parse(User.Claims.FirstOrDefault(c => c.Type == "UserId")?.Value) == e.UserId && course.CourseId == e.CourseId).FirstOrDefault() != null)
                                {
                                    <a asp-page="/Courses/Lessons" asp-route-id="@course.CourseId" class="btn btn-primary">
                                        <i class="fas fa-graduation-cap"></i> Study
                                    </a>
                                }
                                else
                                {
                                    <form method="post" asp-page-handler="Enroll" asp-route-courseId="@course.CourseId" style="display: inline;">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-graduation-cap"></i> Enroll
                                        </button>
                                    </form>
                                }
                                
                                <form method="post" asp-page-handler="Wishlist" asp-route-courseId="@course.CourseId" style="display:inline;">
                                    @if (Model.WishlistCourseIds.Contains(course.CourseId))
                                    {
                                        <button type="submit" class="btn btn-danger" value="goto" name="action">
                                            <i class="fas fa-heart"></i> View wishlist
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-outline-danger" value="add" name="action">
                                            <i class="fas fa-heart"></i> Add wishlist
                                        </button>
                                    }
                                </form>
                                
                                <a asp-page="/Review/Index" asp-route-courseId="@course.CourseId" class="btn btn-outline-warning">
                                    <i class="fas fa-star"></i> Review
                                </a>
                                
                                <a asp-page="/Forum/Index" asp-route-courseId="@course.CourseId" class="btn btn-outline-info">
                                    <i class="fas fa-comments"></i> Forum
                                </a>
                            }
                            else
                            {
                                <a asp-page="/Login" class="btn btn-secondary">
                                    <i class="fas fa-sign-in-alt"></i> Login to Enroll
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <!-- No Courses Message -->
    @if (!Model.Courses.Any())
    {
        <div class="no-courses">
            <i class="fas fa-book-open"></i>
            <p>No courses available at the moment.</p>
        </div>
    }
</div>