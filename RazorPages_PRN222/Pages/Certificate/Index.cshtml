@page
@model RazorPages_PRN222.Pages.Certificate.IndexModel
@{
    ViewData["Title"] = "My Certificates";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">
        <i class="fas fa-certificate text-success"></i> My Certificates
    </h2>

    @if (Model.Certificates != null && Model.Certificates.Any())
    {
        <div class="row">
            @foreach (var cert in Model.Certificates)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card border-success shadow-sm h-100">
                        <div class="card-header bg-success text-white text-center">
                            <h5 class="mb-0">@cert.CourseTitle</h5>
                        </div>
                        <div class="card-body text-center">
                            <h6 class="card-title">Awarded to</h6>
                            <p class="fw-bold text-primary">@Model.UserName</p>
                            <p class="text-muted mb-1">Issued on @cert.IssuedDate?.ToString("MMMM dd, yyyy")</p>

                            <hr />
                            <small class="text-muted d-block">ID: @cert.CertificateId</small>
                            <small class="text-muted d-block">Code: @cert.CertificateCode</small>

                            <div class="mt-3">
                                <button class="btn btn-outline-primary btn-sm" onclick="window.print()">
                                    <i class="fas fa-print"></i> Print
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle"></i> You don’t have any certificates yet.
            Complete courses and quizzes to earn certificates!
        </div>
    }
</div>

<style>
    .card {
        border-radius: 15px;
    }

    .card-header {
        font-size: 1.1rem;
        font-weight: bold;
    }

    .card-body {
        font-size: 0.95rem;
    }
</style>
