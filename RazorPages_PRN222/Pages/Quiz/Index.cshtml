@page "{courseId:int}"
@model RazorPages_PRN222.Pages.Quiz.IndexModel
@{
    ViewData["Title"] = "Course Quiz";
}

<div class="container mt-5">
    <h1>Quiz: @Model.CourseTitle</h1>
    
    @if (Model.Quiz != null && Model.Questions.Any())
    {
        <form method="post">
            <input type="hidden" asp-for="QuizId" />
            
            @for (int i = 0; i < Model.Questions.Count; i++)
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Question @(i + 1): @Model.Questions[i].QuestionText</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var answer in Model.Questions[i].QuizAnswers)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="radio" 
                                       name="Answers[@i]" value="@answer.AnswerId" 
                                       id="answer_@answer.AnswerId" />
                                <label class="form-check-label" for="answer_@answer.AnswerId">
                                    @answer.AnswerText
                                </label>
                            </div>
                        }
                    </div>
                </div>
            }
            
            <div class="d-flex justify-content-between">
                <a asp-page="/Courses/Learn" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Back to Course</a>
                <button type="submit" class="btn btn-primary">Submit Quiz</button>
            </div>
        </form>
    }
    else
    {
        <div class="alert alert-info">
            <p>No quiz available for this course yet.</p>
            <a asp-page="/Courses/Learn" asp-route-courseId="@Model.CourseId" class="btn btn-primary">Back to Course</a>
        </div>
    }
</div>

