@page "{id:int?}"
@model RazorPages_PRN222.Pages.Courses.DetailsModel
@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="mb-0">Course Details</h1>
                <div class="d-flex gap-2">
                    <select id="courseSelector" class="form-select" style="width: auto;">
                        @foreach (var course in Model.AllCourses)
                        {
                            if (course.CourseId     == Model.CourseId)
                            {
                                <option value="@course.CourseId" selected>@course.Title</option>
                            }
                            else
                            {
                                <option value="@course.CourseId">@course.Title</option>
                            }
                        }
                    </select>
                    <a asp-page="/Courses/Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to Courses
                    </a>
                </div>
            </div>
            
            @if (Model.Course != null)
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title">@Model.Course.Title</h2>
                        <p class="card-text text-muted">@Model.Course.Description</p>
                        
                        <div class="row mt-4">
                            <div class="col-md-3">
                                <div class="text-center">
                                    <i class="fas fa-clock fa-2x text-primary mb-2"></i>
                                    <h5>Duration</h5>
                                    <p class="text-muted">@(Model.Course.EstimatedDuration ?? 0) hours</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <i class="fas fa-users fa-2x text-success mb-2"></i>
                                    <h5>Students</h5>
                                    <p class="text-muted">@(Model.EnrollmentCount ?? 0) enrolled</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <i class="fas fa-star fa-2x text-warning mb-2"></i>
                                    <h5>Rating</h5>
                                    <p class="text-muted">@(Model.AverageRating?.ToString("F1") ?? "N/A") / 5.0</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <i class="fas fa-dollar-sign fa-2x text-info mb-2"></i>
                                    <h5>Price</h5>
                                    <p class="text-muted">$@(Model.Course.Price.ToString("F2"))</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            <div class="course-navigation">
                <div class="d-flex flex-wrap gap-3 justify-content-center">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @if (Model.Course.Enrollments.Where(e => int.Parse(User.Claims.FirstOrDefault(c => c.Type == "UserId")?.Value) == e.UserId && Model.Course.CourseId == e.CourseId).FirstOrDefault() != null)
                        {
                            
                            <div class="col-md-2 mb-3">
                                <a asp-page="/Learning/Course" asp-route-id="@Model.CourseId" class="btn btn-primary w-100 py-3">
                                    <i class="fas fa-play fa-2x mb-2"></i>
                                    <br>Start Learning
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-2 mb-3">
                                <a asp-page="/Courses/Enroll" asp-route-id="@Model.CourseId" class="btn btn-success w-100 py-3">
                                    <i class="fas fa-graduation-cap fa-2x mb-2"></i>
                                    <br>Enroll Now
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-md-2 mb-3">
                            <a asp-page="/Login" class="btn btn-success w-100 py-3">
                                <i class="fas fa-sign-in-alt fa-2x mb-2"></i>
                                <br>Login to Enroll
                            </a>
                        </div>
                    }
                    <div class="col-md-2 mb-3">
                        <a asp-page="/Courses/Lessons" asp-route-id="@Model.CourseId" class="btn btn-info w-100 py-3">
                            <i class="fas fa-book-open fa-2x mb-2"></i>
                            <br>View Lessons
                        </a>
                    </div>
                    <div class="col-md-2 mb-3">
                        <a asp-page="/Review/Index" asp-route-courseId="@Model.CourseId" class="btn btn-warning w-100 py-3">
                            >
                            <i class="fas fa-star fa-2x mb-2"></i>
                            <br>Reviews
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.course-navigation .btn {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    border-radius: 0.5rem;
    font-weight: 600;
}

.course-navigation .btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
}

 .card {
     border: none;
     box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
 }
 
 .course-selector {
     min-width: 250px;
 }
</style>

<script>
document.getElementById('courseSelector').addEventListener('change', function() {
    const selectedCourseId = this.value;
    if (selectedCourseId) {
        window.location.href = '/Courses/Details/' + selectedCourseId;
    }
});
</script>