@page
@model RazorPages_PRN222.Pages.Learning.IndexModel
@{
    ViewData["Title"] = "My Learning";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2><i class="fas fa-graduation-cap"></i> My Learning Dashboard</h2>
            <hr />
        </div>
    </div>
    
    <!-- Quiz Access Information -->
    <div class="alert alert-success border-0" style="background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%); color: white;">
        <div class="d-flex align-items-center">
            <div class="flex-grow-1">
                <h5 class="mb-1"><i class="fas fa-question-circle me-2"></i>How to Take Quizzes</h5>
                <p class="mb-0">Quizzes are available in individual lessons. Click "Continue Learning" on any course, then look for the quiz section in each lesson.</p>
            </div>
            <div class="ms-3">
                <i class="fas fa-arrow-right fa-2x"></i>
            </div>
        </div>
    </div>

    @if (Model.EnrolledCourses.Any())
    {
        <div class="row">
            @foreach (var enrollment in Model.EnrolledCourses)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                                                 <img src="@enrollment.Course.CourseImage" class="card-img-top" alt="@enrollment.Course.Title" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@enrollment.Course.Title</h5>
                            <p class="card-text text-muted">@enrollment.Course.Description</p>
                            
                            <div class="progress mb-3">
                                <div class="progress-bar" role="progressbar" 
                                     style="width: @(enrollment.ProgressPercentage ?? 0)%" 
                                     aria-valuenow="@(enrollment.ProgressPercentage ?? 0)" 
                                     aria-valuemin="0" aria-valuemax="100">
                                    @(enrollment.ProgressPercentage?.ToString("F1") ?? "0")%
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="fas fa-clock"></i> @enrollment.Course.EstimatedDuration hours
                                </small>
                                <small class="text-muted">
                                    <i class="fas fa-calendar"></i> @enrollment.EnrollmentDate?.ToString("MMM dd, yyyy")
                                </small>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="/Learning/Course/@enrollment.CourseId" class="btn btn-primary btn-sm">
                                <i class="fas fa-play"></i> Continue Learning
                            </a>
                            <a href="/Courses/Details/@enrollment.CourseId" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-3x mb-3"></i>
                    <h4>No courses enrolled yet</h4>
                    <p>Start your learning journey by enrolling in a course!</p>
                    <a href="/Courses" class="btn btn-primary">
                        <i class="fas fa-search"></i> Browse Courses
                    </a>
                </div>
            </div>
        </div>
    }

    @if (Model.RecentProgress.Any())
    {
        <div class="row mt-4">
            <div class="col-md-12">
                <h3><i class="fas fa-chart-line"></i> Recent Progress</h3>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Course</th>
                                <th>Lesson</th>
                                <th>Status</th>
                                <th>Last Accessed</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var progress in Model.RecentProgress)
                            {
                                <tr>
                                    <td>@progress.Course.Title</td>
                                    <td>@progress.Lesson.Title</td>
                                    <td>
                                        @if (progress.IsCompleted == true)
                                        {
                                            <span class="badge bg-success">Completed</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">In Progress</span>
                                        }
                                    </td>
                                    <td>@progress.LastAccessedAt?.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>
                                        <a href="/Learning/Lesson/@progress.LessonId" class="btn btn-sm btn-primary">
                                            <i class="fas fa-play"></i> Continue
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
