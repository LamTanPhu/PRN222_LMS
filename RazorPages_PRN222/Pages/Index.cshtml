@page
@model RazorPages_PRN222.Pages.IndexModel
@{
    ViewData["Title"] = "Welcome to E-Learning";
}

<div class="hero-section text-center py-5 mb-5">
    <div class="container">
        <h1 class="display-4 fw-bold text-primary mb-4">
            <i class="fas fa-graduation-cap me-3"></i>
            Welcome to the E-Learning Platform
        </h1>
        <p class="lead text-secondary mb-4">
            Discover thousands of courses from top instructors around the world. 
            Start your learning journey today and unlock your potential.
        </p>
        <div class="hero-buttons">
            <a asp-page="/Courses/Index" class="btn btn-primary btn-lg me-3">
                <i class="fas fa-rocket me-2"></i>Explore Courses
            </a>
            <a asp-page="/Register" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-user-plus me-2"></i>Get Started
            </a>
        </div>
    </div>
</div>

<div class="container">
    <!-- Featured Courses Section -->
    <section class="mb-5">
        <div class="section-header text-center mb-4">
            <h2 class="fw-bold">
                <i class="fas fa-star text-warning me-2"></i>
                Featured Courses
            </h2>
            <p class="text-secondary">Handpicked courses to kickstart your learning journey</p>
        </div>
        
        <div class="row g-4">
            @foreach (var course in Model.FeaturedCourses)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card course-card h-100">
                        <div class="card-body d-flex flex-column">
                            <div class="course-header mb-3">
                                <h5 class="card-title fw-bold">@course.Title</h5>
                                <p class="card-text text-muted">
                                    @(course.Description?.Length > 120 ? course.Description.Substring(0, 120) + "..." : course.Description)
                                </p>
                            </div>
                            
                            <div class="course-meta mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="badge bg-primary">
                                        <i class="fas fa-tag me-1"></i>@(course.Category?.Name ?? "N/A")
                                    </span>
                                    <span class="badge bg-success">
                                        <i class="fas fa-user me-1"></i>@(course.Instructor?.FullName ?? "N/A")
                                    </span>
                                </div>
                                <div class="course-rating">
                                    <div class="star-rating">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="far fa-star"></i>
                                    </div>
                                    <small class="text-muted ms-2">4.5 (128 reviews)</small>
                                </div>
                            </div>
                            
                            <div class="mt-auto">
                                <a asp-page="/Courses/Details" asp-route-id="@course.CourseId" 
                                   class="btn btn-primary w-100">
                                    <i class="fas fa-eye me-2"></i>View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <div class="text-center mt-4">
            <a asp-page="/Courses/Index" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-th-large me-2"></i>View All Courses
            </a>
        </div>
    </section>

    <!-- Recent Announcements Section -->
    <section class="mb-5">
        <div class="section-header text-center mb-4">
            <h2 class="fw-bold">
                <i class="fas fa-bullhorn text-info me-2"></i>
                Recent Announcements
            </h2>
            <p class="text-secondary">Stay updated with the latest news and updates</p>
        </div>
        
        <div class="row g-4">
            @foreach (var announcement in Model.Announcements)
            {
                <div class="col-lg-6 col-md-12">
                    <div class="card announcement-card h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-start mb-3">
                                <div class="announcement-icon me-3">
                                    <i class="fas fa-bullhorn text-primary fa-2x"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h5 class="card-title fw-bold mb-2">@announcement.Title</h5>
                                    <p class="card-text">@announcement.Content</p>
                                    <div class="announcement-meta">
                                        <small class="text-muted">
                                            <i class="fas fa-user me-1"></i>
                                            Posted by @(announcement.Author?.FullName ?? "N/A")
                                        </small>
                                        <small class="text-muted ms-3">
                                            <i class="fas fa-calendar me-1"></i>
                                            @announcement.PublishDate?.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Categories Section -->
    <section class="mb-5">
        <div class="section-header text-center mb-4">
            <h2 class="fw-bold">
                <i class="fas fa-th-large text-success me-2"></i>
                Explore Categories
            </h2>
            <p class="text-secondary">Find courses in your area of interest</p>
        </div>
        
        <div class="row g-3 justify-content-center">
            @foreach (var category in Model.Categories)
            {
                <div class="col-auto">
                    <a asp-page="/Courses/Index" asp-route-categoryId="@category.CategoryId" 
                       class="btn btn-outline-primary btn-lg category-btn">
                        <i class="fas fa-folder me-2"></i>@category.Name
                    </a>
                </div>
            }
        </div>
    </section>

    <!-- Features Section -->
    <section class="mb-5">
        <div class="section-header text-center mb-4">
            <h2 class="fw-bold">
                <i class="fas fa-cogs text-warning me-2"></i>
                Why Choose Our Platform?
            </h2>
            <p class="text-secondary">Discover what makes us different</p>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-users fa-3x text-primary"></i>
                    </div>
                    <h5 class="fw-bold mb-3">Expert Instructors</h5>
                    <p class="text-muted mb-0">Learn from industry professionals and certified experts with years of real-world experience.</p>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-mobile-alt fa-3x text-success"></i>
                    </div>
                    <h5 class="fw-bold mb-3">Learn Anywhere</h5>
                    <p class="text-muted mb-0">Access your courses on any device, anytime, anywhere with our mobile-optimized platform.</p>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-certificate fa-3x text-warning"></i>
                    </div>
                    <h5 class="fw-bold mb-3">Get Certified</h5>
                    <p class="text-muted mb-0">Earn recognized certificates upon completion of your courses to boost your career.</p>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-headset fa-3x text-info"></i>
                    </div>
                    <h5 class="fw-bold mb-3">24/7 Support</h5>
                    <p class="text-muted mb-0">Get help whenever you need it with our dedicated support team and community forums.</p>
                </div>
            </div>
        </div>
        
        <!-- Additional Features Row -->
        <div class="row g-4 mt-4">
            <div class="col-lg-4 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-chart-line fa-3x text-danger"></i>
                    </div>
                    <h5 class="fw-bold mb-3">Track Progress</h5>
                    <p class="text-muted mb-0">Monitor your learning journey with detailed progress tracking and analytics.</p>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-comments fa-3x text-purple"></i>
                    </div>
                    <h5 class="fw-bold mb-3">Interactive Learning</h5>
                    <p class="text-muted mb-0">Engage with peers and instructors through interactive discussions and group projects.</p>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6">
                <div class="feature-card text-center p-4 h-100">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-rocket fa-3x text-success"></i>
                    </div>
                    <h5 class="fw-bold mb-3">Fast & Reliable</h5>
                    <p class="text-muted mb-0">Experience lightning-fast loading times and 99.9% uptime for seamless learning.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="mb-0">
        <!-- ← SỬA: margin-bottom thành 0 -->
        <div class="cta-section text-center py-5">
            <div class="container">
                <h2 class="fw-bold mb-3">Ready to Start Learning?</h2>
                <p class="lead text-secondary mb-4">
                    Join thousands of learners who have already transformed their careers with our platform.
                </p>
                <div class="cta-buttons">
                    <a asp-page="/Register" class="btn btn-primary btn-lg me-3 mb-2">
                        <i class="fas fa-user-plus me-2"></i>Get Started Free
                    </a>
                    <a asp-page="/Courses/Index" class="btn btn-outline-primary btn-lg mb-2">
                        <i class="fas fa-search me-2"></i>Browse Courses
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}