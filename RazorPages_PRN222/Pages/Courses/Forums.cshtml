@page "{id:int}"
@model RazorPages_PRN222.Pages.Courses.ForumsModel
@{
    ViewData["Title"] = "Course Forums";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-comments me-2"></i>
                    Forums - @Model.CourseTitle
                </h2>
                <div>
                    <button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#newPostModal">
                        <i class="fas fa-plus me-1"></i>New Post
                    </button>
                    <a asp-page="/Courses/Details" asp-route-id="@Model.CourseId" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to Course
                    </a>
                </div>
            </div>

            @if (!Model.Forums.Any())
            {
                <div class="alert alert-info text-center py-5">
                    <i class="fas fa-comments fa-3x mb-3 text-muted"></i>
                    <h4>No forum posts yet</h4>
                    <p class="text-muted">Be the first to start a discussion!</p>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newPostModal">
                        <i class="fas fa-plus me-1"></i>Create First Post
                    </button>
                </div>
            }
            else
            {
                <div class="forum-posts">
                    @foreach (var forum in Model.Forums.OrderByDescending(f => f.IsSticky == true).ThenByDescending(f => f.LastReplyDate ?? f.PostDate))
                    {
                        <div class="card mb-3 forum-card @(forum.IsSticky == true ? "border-warning" : "")">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <div class="d-flex align-items-center mb-2">
                                            @if (forum.IsSticky == true)
                                            {
                                                <span class="badge bg-warning text-dark me-2">
                                                    <i class="fas fa-thumbtack me-1"></i>Sticky
                                                </span>
                                            }
                                            @if (forum.IsClosed == true)
                                            {
                                                <span class="badge bg-danger me-2">
                                                    <i class="fas fa-lock me-1"></i>Closed
                                                </span>
                                            }
                                            <h5 class="card-title mb-0">
                                                <a href="#" class="text-decoration-none" onclick="viewPost(@forum.PostId)">
                                                    @forum.Title
                                                </a>
                                            </h5>
                                        </div>
                                        
                                        <div class="d-flex align-items-center text-muted small">
                                            <span class="me-3">
                                                <i class="fas fa-user me-1"></i>
                                                @(forum.User?.Username ?? "Unknown User")
                                            </span>
                                            <span class="me-3">
                                                <i class="fas fa-calendar me-1"></i>
                                                @(forum.PostDate?.ToString("MMM dd, yyyy") ?? "Unknown Date")
                                            </span>
                                            @if (forum.LastReplyDate.HasValue)
                                            {
                                                <span>
                                                    <i class="fas fa-clock me-1"></i>
                                                    Last reply: @forum.LastReplyDate.Value.ToString("MMM dd, yyyy")
                                                </span>
                                            }
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-4 text-end">
                                        <div class="d-flex justify-content-end align-items-center">
                                            <div class="text-center me-3">
                                                <div class="fw-bold text-primary">@(forum.ReplyCount ?? 0)</div>
                                                <small class="text-muted">Replies</small>
                                            </div>
                                            <div class="text-center">
                                                <div class="fw-bold text-success">@(forum.ForumReplies?.Count ?? 0)</div>
                                                <small class="text-muted">Views</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- New Post Modal -->
<div class="modal fade" id="newPostModal" tabindex="-1" aria-labelledby="newPostModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newPostModalLabel">
                    <i class="fas fa-plus me-2"></i>Create New Forum Post
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="postTitle" class="form-label">Title</label>
                        <input type="text" class="form-control" id="postTitle" name="Title" required>
                    </div>
                    <div class="mb-3">
                        <label for="postContent" class="form-label">Content</label>
                        <textarea class="form-control" id="postContent" name="Content" rows="6" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane me-1"></i>Post
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
.forum-card {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    border: 1px solid #e9ecef;
}

.forum-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
}

.forum-card.border-warning {
    border-left: 4px solid #ffc107 !important;
}

.card-title a {
    color: #2c3e50;
    font-weight: 600;
}

.card-title a:hover {
    color: #007bff;
}

.badge {
    font-size: 0.75rem;
}
</style>

