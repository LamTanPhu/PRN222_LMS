@* 
@page "{quizId:int}"
@model RazorPages_PRN222.Pages.Learning.QuizModel
@{
    ViewData["Title"] = "Quiz";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Learning">My Learning</a></li>
                    <li class="breadcrumb-item"><a href="/Learning/Course/@Model.Course?.CourseId">@Model.Course?.Title</a></li>
                    <li class="breadcrumb-item"><a href="/Learning/Lesson/@Model.Lesson?.LessonId">@Model.Lesson?.Title</a></li>
                    <li class="breadcrumb-item active">Quiz</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3><i class="fas fa-question-circle"></i> @Model.Quiz?.Title</h3>
                </div>
                <div class="card-body">
                    @if (Model.Questions.Any())
                    {
                        <form method="post">
                            <input type="hidden" name="QuizId" value="@Model.Quiz?.QuizId" />
                            
                            @for (int i = 0; i < Model.Questions.Count; i++)
                            {
                                var question = Model.Questions[i];
                                <div class="question-card mb-4 p-4 border rounded">
                                    <h5 class="mb-3">
                                        <span class="badge bg-primary me-2">@(i + 1)</span>
                                        @question.QuestionText
                                    </h5>
                                    
                                    <div class="answers-container">
                                        @foreach (var answer in question.QuizAnswers)
                                        {
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" 
                                                       type="radio" 
                                                       name="Answers[@i]" 
                                                       value="@answer.AnswerId" 
                                                       id="answer_@(i)_@(answer.AnswerId)" />
                                                <label class="form-check-label" for="answer_@(i)_@(answer.AnswerId)">
                                                    @answer.AnswerText
                                                </label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                            
                            <div class="d-flex justify-content-between align-items-center mt-4">
                                <a href="/Learning/Lesson/@Model.Lesson?.LessonId" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to Lesson
                                </a>
                                
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-check-circle"></i> Submit Quiz
                                </button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
                                <h4>No Questions Available</h4>
                                <p class="mb-3">This quiz doesn't have any questions yet.</p>
                                <a href="/Learning/Lesson/@Model.Lesson?.LessonId" class="btn btn-primary">Back to Lesson</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle"></i> Quiz Information</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li><strong>Questions:</strong> @Model.Questions.Count</li>
                        <li><strong>Time Limit:</strong> @(Model.Quiz?.TimeLimit ?? 0) minutes</li>
                        <li><strong>Passing Score:</strong> @(Model.Quiz?.PassingScore ?? 70)%</li>
                        <li><strong>Max Attempts:</strong> @(Model.Quiz?.MaxAttempts ?? 1)</li>
                    </ul>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5><i class="fas fa-clock"></i> Timer</h5>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <h4 class="text-primary" id="timer">@(Model.Quiz?.TimeLimit ?? 0):00</h4>
                        <small class="text-muted">Time remaining</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.question-card {
    background-color: #f8f9fa;
    transition: all 0.3s ease;
}

.question-card:hover {
    background-color: #e9ecef;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.answers-container {
    padding-left: 1rem;
}

.form-check-input:checked + .form-check-label {
    font-weight: 600;
    color: #0d6efd;
}

.btn-lg {
    padding: 12px 30px;
    font-size: 1.1rem;
}
</style>

@section Scripts {
    <script>
        // Timer functionality would go here
        // This is commented out as this page is no longer used
    </script>
}
