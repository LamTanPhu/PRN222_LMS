@page "{courseId:int}"
@model RazorPages_PRN222.Pages.Quiz.IndexModel
@{
    ViewData["Title"] = "Course Quiz";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header text-center">
                    <h1 class="mb-0">Quiz: @Model.CourseTitle</h1>
                </div>
                <div class="card-body">
                    @if (Model.Quiz != null && Model.Questions.Any())
                    {
                        <form method="post">
                            <!-- Hidden fields -->
                            <input type="hidden" name="QuizId" value="@Model.QuizId" />
                            <input type="hidden" name="CourseId" value="@Model.CourseId" />
                            
                            @for (int i = 0; i < Model.Questions.Count; i++)
                            {
                                var question = Model.Questions[i];
                                <div class="question-card mb-4 p-4 border rounded">
                                    <h5 class="mb-3">
                                        <span class="badge bg-primary me-2">@(i + 1)</span>
                                        @question.QuestionText
                                    </h5>
                                    
                                    <div class="answers-container">
                                        @foreach (var answer in question.QuizAnswers)
                                        {
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" 
                                                       type="radio" 
                                                       name="Answers[@i]" 
                                                       value="@answer.AnswerId" 
                                                       id="answer_@(i)_@(answer.AnswerId)" />
                                                <label class="form-check-label" for="answer_@(i)_@(answer.AnswerId)">
                                                    @answer.AnswerText
                                                </label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                            
                            <div class="d-flex justify-content-between align-items-center mt-4">
                                <a asp-page="/Courses/Learn" asp-route-courseId="@Model.CourseId" 
                                   class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to Course
                                </a>
                                
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-check-circle"></i> Submit Quiz
                                </button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
                                <h4>No Quiz Available</h4>
                                <p class="mb-3">This course doesn't have a quiz yet.</p>
                                <a asp-page="/Courses/Learn" asp-route-courseId="@Model.CourseId" 
                                   class="btn btn-primary">Back to Course</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.question-card {
    background-color: #f8f9fa;
    transition: all 0.3s ease;
}

.question-card:hover {
    background-color: #e9ecef;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.answers-container {
    padding-left: 1rem;
}

.form-check-input:checked + .form-check-label {
    font-weight: 600;
    color: #0d6efd;
}

.btn-lg {
    padding: 12px 30px;
    font-size: 1.1rem;
}
</style>

