@page
@model RazorPages_PRN222.Pages.Admin.CoursesModel
@{
    ViewData["Title"] = "Manage Courses";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h1>Manage Courses</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model.Courses)
            {
                <tr>
                    <td>@course.CourseId</td>
                    <td>@course.Title</td>
                    <td>
                        <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editCourseModal-@course.CourseId">Edit</button>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteCourseModal-@course.CourseId">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addCourseModal">Add New Course</button>
</div>

<!-- Add Course Modal -->
<div class="modal fade" id="addCourseModal" tabindex="-1" aria-labelledby="addCourseModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCourseModalLabel">Add New Course</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-page-handler="Create">
                    <div class="form-group">
                        <label asp-for="NewCourse.Title">Title</label>
                        <input asp-for="NewCourse.Title" class="form-control" />
                        <span asp-validation-for="NewCourse.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewCourse.Description">Description</label>
                        <textarea asp-for="NewCourse.Description" class="form-control"></textarea>
                        <span asp-validation-for="NewCourse.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewCourse.Price">Price</label>
                        <input asp-for="NewCourse.Price" class="form-control" />
                        <span asp-validation-for="NewCourse.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewCourse.InstructorId">Instructor</label>
                        <select asp-for="NewCourse.InstructorId" class="form-control" asp-items="Model.InstructorOptions"></select>
                        <span asp-validation-for="NewCourse.InstructorId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewCourse.CategoryId">Category</label>
                        <select asp-for="NewCourse.CategoryId" class="form-control" asp-items="Model.CategoryOptions"></select>
                        <span asp-validation-for="NewCourse.CategoryId" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Course Modal -->
@foreach (var course in Model.Courses)
{
    <div class="modal fade" id="editCourseModal-@course.CourseId" tabindex="-1" aria-labelledby="editCourseModalLabel-@course.CourseId" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editCourseModalLabel-@course.CourseId">Edit Course (ID: @course.CourseId)</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-page-handler="Edit" asp-route-id="@course.CourseId">
                        <input type="hidden" asp-for="@Model.EditCourse.CourseId" value="@course.CourseId" />
                        <div class="form-group">
                            <label asp-for="@Model.EditCourse.Title">Title</label>
                            <input asp-for="@Model.EditCourse.Title" class="form-control" value="@course.Title" />
                            <span asp-validation-for="@Model.EditCourse.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.EditCourse.Description">Description</label>
                            <textarea asp-for="@Model.EditCourse.Description" class="form-control">@course.Description</textarea>
                            <span asp-validation-for="@Model.EditCourse.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.EditCourse.Price">Price</label>
                            <input asp-for="@Model.EditCourse.Price" class="form-control" value="@course.Price" />
                            <span asp-validation-for="@Model.EditCourse.Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.EditCourse.InstructorId">Instructor</label>
                            <select asp-for="@Model.EditCourse.InstructorId" class="form-control" asp-items="Model.InstructorOptions">
                                <option value="@course.InstructorId" selected>@course.Instructor.UserId</option>
                            </select>
                            <span asp-validation-for="@Model.EditCourse.InstructorId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.EditCourse.CategoryId">Category</label>
                            <select asp-for="@Model.EditCourse.CategoryId" class="form-control" asp-items="Model.CategoryOptions">
                                <option value="@course.CategoryId" selected>@course.Category.Name</option>
                            </select>
                            <span asp-validation-for="@Model.EditCourse.CategoryId" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Delete Course Modal -->
@foreach (var course in Model.Courses)
{
    <div class="modal fade" id="deleteCourseModal-@course.CourseId" tabindex="-1" aria-labelledby="deleteCourseModalLabel-@course.CourseId" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteCourseModalLabel-@course.CourseId">Delete Course (ID: @course.CourseId)</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete course with ID @course.CourseId?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@course.CourseId" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}