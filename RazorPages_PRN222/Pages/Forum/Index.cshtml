@page "{courseId:int}"
@model RazorPages_PRN222.Pages.Forum.IndexModel
@{
    ViewData["Title"] = "Course Forum";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h1>Forum: @Model.CourseTitle</h1>
            
            @* Edit Post *@
            @if (Model.EditingPost != null)
            {
                <div class="card mb-4 border-warning">
                    <div class="card-header bg-warning-subtle">
                        <h5 class="mb-0">Edit Post</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="UpdatePost">
                            <input type="hidden" name="id" value="@Model.EditingPost.PostId" />
                            <input type="hidden" name="courseId" value="@Model.CourseId" />
                            <div class="mb-3">
                                <label class="form-label" for="editTitle">Title</label>
                                <input id="editTitle" class="form-control" name="title" value="@Model.EditingPost.Title" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="editContent">Content</label>
                                <textarea id="editContent" class="form-control" name="content" rows="4" required>@Model.EditingPost.Content</textarea>
                            </div>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <a class="btn btn-secondary" asp-page="/Forum/Index" asp-route-courseId="@Model.CourseId">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            }
            
            @* Edit Reply *@
            @if (Model.EditingReply != null)
            {
                <div class="card mb-4 border-warning">
                    <div class="card-header bg-warning-subtle">
                        <h5 class="mb-0">Edit Reply</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="UpdateReply">
                            <input type="hidden" name="id" value="@Model.EditingReply.ReplyId" />
                            <input type="hidden" name="courseId" value="@Model.CourseId" />
                            <div class="mb-3">
                                <label class="form-label" for="editReply">Reply</label>
                                <textarea id="editReply" class="form-control" name="replyContent" rows="3" required>@Model.EditingReply.Content</textarea>
                            </div>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <a class="btn btn-secondary" asp-page="/Forum/Index" asp-route-courseId="@Model.CourseId">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            }
            
            <!-- Create new post -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Create New Post</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="CreatePost">
                        <input type="hidden" name="courseId" value="@Model.CourseId" />
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" name="title" required />
                        </div>
                        <div class="mb-3">
                            <label for="content" class="form-label">Content</label>
                            <textarea class="form-control" id="content" name="content" rows="4" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Post</button>
                    </form>
                </div>
            </div>

            <!-- Forum posts -->
            @if (Model.ForumPosts.Any())
            {
                @foreach (var post in Model.ForumPosts)
                {
                    <div class="card mb-3">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@post.Title</h5>
                            <small class="text-muted">@post.PostDate?.ToString("MM/dd/yyyy HH:mm")</small>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@post.Content</p>
                            <p class="text-muted">Posted by: @post.User.FullName</p>
                            @if (User.Identity?.IsAuthenticated == true && (User.Claims.FirstOrDefault(c => c.Type == "UserId")?.Value == post.UserId.ToString() || User.IsInRole("Admin")))
                            {
                                <div class="btn-group btn-group-sm mb-2">
                                    <a class="btn btn-outline-primary" asp-page-handler="EditPost" asp-route-id="@post.PostId" asp-route-courseId="@Model.CourseId">Edit</a>
                                    <form method="post" asp-page-handler="DeletePost" onsubmit="return confirm('Delete this post?');">
                                        <input type="hidden" name="id" value="@post.PostId" />
                                        <input type="hidden" name="courseId" value="@Model.CourseId" />
                                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            }
                            
                            <!-- Replies -->
                            @if (post.ForumReplies.Any())
                            {
                                <div class="mt-3">
                                    <h6>Replies:</h6>
                                    @foreach (var reply in post.ForumReplies)
                                    {
                                        <div class="border-start border-2 ps-3 ms-3 mb-2">
                                            <p class="mb-1">@reply.Content</p>
                                            <small class="text-muted">
                                                @reply.User.FullName - 
                                                @reply.ReplyDate?.ToString("MM/dd/yyyy HH:mm")
                                            </small>
                                            @if (User.Identity?.IsAuthenticated == true && (User.Claims.FirstOrDefault(c => c.Type == "UserId")?.Value == reply.UserId.ToString() || User.IsInRole("Admin")))
                                            {
                                                <div class="btn-group btn-group-sm mt-1">
                                                    <a class="btn btn-outline-primary" asp-page-handler="EditReply" asp-route-id="@reply.ReplyId" asp-route-courseId="@Model.CourseId">Edit</a>
                                                    <form method="post" asp-page-handler="DeleteReply" onsubmit="return confirm('Delete this reply?');">
                                                        <input type="hidden" name="id" value="@reply.ReplyId" />
                                                        <input type="hidden" name="courseId" value="@Model.CourseId" />
                                                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                                                    </form>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                            
                            <!-- Reply form -->
                            <div class="mt-3">
                                <form method="post" asp-page-handler="CreateReply">
                                    <input type="hidden" name="courseId" value="@Model.CourseId" />
                                    <input type="hidden" name="forumId" value="@post.PostId" />
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="replyContent" 
                                               placeholder="Write a reply..." required />
                                        <button type="submit" class="btn btn-outline-secondary">Reply</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">
                    <p>No posts yet. Be the first to start a discussion!</p>
                </div>
            }
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Course Information</h5>
                </div>
                <div class="card-body">
                    <h6>@Model.CourseTitle</h6>
                    <p class="text-muted">@Model.CourseDescription</p>
                    <a asp-page="/Courses/Learn" asp-route-courseId="@Model.CourseId" class="btn btn-primary btn-sm">
                        Back to Course
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

