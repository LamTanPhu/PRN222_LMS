<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RazorPages_PRN222 Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorPages_PRN222.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        .sidebar {
            height: calc(100vh - 76px); /* Subtract navbar height */
            position: fixed;
            top: 76px; /* Start below the navbar */
            left: 0;
            width: 250px;
            background-color: #f8f9fa;
            padding-top: 20px;
            overflow-y: auto;
            border-right: 1px solid #dee2e6;
        }

        .content {
            margin-left: 250px;
            margin-top: 76px; /* Account for fixed navbar */
            padding: 20px;
            min-height: calc(100vh - 76px);
        }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1030;
        }

        body {
            padding-top: 0;
        }

        .footer {
            margin-left: 250px;
            margin-top: 20px;
        }

        .sidebar .nav-link {
            padding: 12px 20px;
            border-bottom: 1px solid #e9ecef;
            transition: all 0.3s ease;
        }

            .sidebar .nav-link:hover {
                background-color: #e9ecef;
                padding-left: 25px;
            }

            .sidebar .nav-link.active {
                background-color: #007bff;
                color: white !important;
            }

        .sidebar h4 {
            padding: 0 20px 20px 20px;
            border-bottom: 2px solid #007bff;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <!-- Top Navigation Bar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Admin/Index">
                    <i class="fas fa-cog"></i> RazorPages_PRN222 Admin
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">
                                <i class="fas fa-home"></i> Back to Site
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Courses/Index">
                                <i class="fas fa-book"></i> View Courses
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/MyProfile/Index">
                                <i class="fas fa-user"></i> My Profile
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle"></i> @User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-page="/MyProfile/Index">
                                            <i class="fas fa-user"></i> My Profile
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-page="/Logout">
                                            <i class="fas fa-sign-out-alt"></i> Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-center">
            <i class="fas fa-tools"></i> Admin Panel
        </h4>
        <nav class="nav flex-column">
            <a class="nav-link text-dark" asp-page="/Admin/Index">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
            <a class="nav-link text-dark" asp-page="/Admin/Courses">
                <i class="fas fa-book"></i> Manage Courses
            </a>
            <a class="nav-link text-dark" asp-page="/Admin/Lessons">
                <i class="fas fa-play-circle"></i> Manage Lessons
            </a>
            <a class="nav-link text-dark" asp-page="/Admin/Quizzes">
                <i class="fas fa-question-circle"></i> Manage Quizzes
            </a>
            <a class="nav-link text-dark" asp-page="/Admin/Users">
                <i class="fas fa-users"></i> Manage Users
            </a>
            <a class="nav-link text-dark" asp-page="/Admin/Categories">
                <i class="fas fa-tags"></i> Manage Categories
            </a>
            <a class="nav-link text-dark" asp-page="/Admin/Instructors">
                <i class="fas fa-chalkboard-teacher"></i> Manage Instructors
            </a>
            <a class="nav-link text-dark" asp-page="/Admin/Announcements">
                <i class="fas fa-bullhorn"></i> Manage Announcements
            </a>
            <a class="nav-link text-dark" asp-page="/Admin/StudentProgress">
                <i class="fas fa-chart-line"></i> Monitor Student Progress
            </a>
        </nav>
    </div>

    <!-- Main Content Area -->
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2025 - RazorPages_PRN222 Admin - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>