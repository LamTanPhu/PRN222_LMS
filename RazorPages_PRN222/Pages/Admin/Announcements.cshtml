@page
@model RazorPages_PRN222.Pages.Admin.AnnouncementsModel
@{
    ViewData["Title"] = "Manage Announcements";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <h1>Manage Announcements</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Announcement ID</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var announcement in Model.Announcements)
            {
                <tr>
                    <td>@announcement.AnnouncementId</td>
                    <td>@announcement.Title</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@announcement.AnnouncementId" class="btn btn-primary btn-sm">Edit</a>
                        <form asp-page-handler="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@announcement.AnnouncementId" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-page="./Create" class="btn btn-success">Add New Announcement</a>
</div>