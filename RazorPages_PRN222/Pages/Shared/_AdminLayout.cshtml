<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorPages_PRN222.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Admin Sidebar -->
    <div class="admin-sidebar" id="adminSidebar">
        <div class="admin-sidebar-header" id="sidebarHeader">
            <h4><i class="fas fa-shield-alt me-2"></i>Admin Panel</h4>
        </div>
        
        <nav class="admin-nav">
            <a class="admin-nav-item" asp-page="/Admin/Index" id="dashboardLink">
                <i class="fas fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
            
            <a class="admin-nav-item" asp-page="/Admin/Courses" id="coursesLink">
                <i class="fas fa-book"></i>
                <span>Manage Courses</span>
            </a>
            
            <a class="admin-nav-item" asp-page="/Admin/Lessons" id="lessonsLink">
                <i class="fas fa-chalkboard-teacher"></i>
                <span>Manage Lessons</span>
            </a>
            
            <a class="admin-nav-item" asp-page="/Admin/Quizzes" id="quizzesLink">
                <i class="fas fa-question-circle"></i>
                <span>Manage Quizzes</span>
            </a>
            
            <a class="admin-nav-item" asp-page="/Admin/Users" id="usersLink">
                <i class="fas fa-users"></i>
                <span>Manage Users</span>
            </a>
            
            <a class="admin-nav-item" asp-page="/Admin/Categories" id="categoriesLink">
                <i class="fas fa-tags"></i>
                <span>Manage Categories</span>
            </a>
            
            <a class="admin-nav-item" asp-page="/Admin/Instructors" id="instructorsLink">
                <i class="fas fa-user-tie"></i>
                <span>Manage Instructors</span>
            </a>
            
            <a class="admin-nav-item" asp-page="/Admin/Announcements" id="announcementsLink">
                <i class="fas fa-bullhorn"></i>
                <span>Manage Announcements</span>
            </a>
            
            <a class="admin-nav-item" asp-page="/Admin/StudentProgress" id="progressLink">
                <i class="fas fa-chart-line"></i>
                <span>Student Progress</span>
            </a>
            
            <hr style="border-color: rgba(255, 255, 255, 0.2); margin: 1rem;">
            
            <a class="admin-nav-item" asp-page="/Index">
                <i class="fas fa-home"></i>
                <span>Back to Site</span>
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="admin-main" id="adminMain">
        <!-- Admin Header -->
        <header class="admin-header">
            <div class="d-flex align-items-center">
                <button class="toggle-sidebar me-3" id="toggleSidebar">
                    <i class="fas fa-bars"></i>
                </button>
                <h4 class="mb-0">@ViewData["Title"]</h4>
            </div>
            
            <div class="d-flex align-items-center">
                <div class="dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user-circle me-2"></i>
                        @User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" asp-page="/MyProfile/Index">
                            <i class="fas fa-user me-2"></i>My Profile
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-page="/Logout">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </a></li>
                    </ul>
                </div>
            </div>
        </header>

        <!-- Admin Content -->
        <div class="admin-content">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Toggle sidebar functionality
        document.getElementById('toggleSidebar').addEventListener('click', function() {
            const sidebar = document.getElementById('adminSidebar');
            const main = document.getElementById('adminMain');
            const header = document.getElementById('sidebarHeader');
            const navItems = document.querySelectorAll('.admin-nav-item');
            
            sidebar.classList.toggle('collapsed');
            main.classList.toggle('expanded');
            header.classList.toggle('collapsed');
            
            navItems.forEach(item => {
                item.classList.toggle('collapsed');
            });
        });
        
        // Set active nav item based on current page
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navItems = document.querySelectorAll('.admin-nav-item');
            
            navItems.forEach(item => {
                if (item.getAttribute('asp-page') && currentPath.includes(item.getAttribute('asp-page'))) {
                    item.classList.add('active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>