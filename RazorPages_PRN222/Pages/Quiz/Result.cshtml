@page "{attemptId:int}"
@model RazorPages_PRN222.Pages.Quiz.ResultModel
@{
    ViewData["Title"] = "Quiz Result";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center">
                    <h1 class="mb-0">Quiz Result</h1>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <h2 class="text-primary">Score: @(Model.Attempt?.Score?.ToString("F1"))%</h2>
                    </div>
                    
                    <div class="mb-4">
                        @if (Model.Attempt?.IsPassed == true)
                        {
                            <div class="alert alert-success">
                                <h4 class="alert-heading">Congratulations! ðŸŽ‰</h4>
                                <p class="mb-0">You have passed the quiz!</p>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <h4 class="alert-heading">Keep Learning! ðŸ“š</h4>
                                <p class="mb-0">You need to score at least 50% to pass. Try again!</p>
                            </div>
                        }
                    </div>
                    
                    <div class="d-flex justify-content-center gap-3">
                        <a asp-page="/Index" class="btn btn-primary">Back to Home</a>
                        <a asp-page="/Courses/Index" class="btn btn-outline-secondary">Browse Courses</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 